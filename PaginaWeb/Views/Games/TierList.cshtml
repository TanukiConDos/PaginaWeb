@{
    int count = 0;
}
@model List<List<Character>>

<div style="flex-direction:column;align-items:center;">
    <h2>Tier List</h2>
    <div class="tierlist-div">
        @foreach (var tier in @Model)
        {
            <div class="tier-div">
                <div class="tierNumber-div">
                    Tier @count
                </div>
                <div>
                    @foreach (var character in tier)
                    {
                        <a href="@character.url">
                            <div class="char-div">
                                <img class="tier-img" src="@character.img">
                                @character.name
                            </div>
                        </a>
                    }
                </div>
            </div>
            count++;
        }
    </div>
</div>
