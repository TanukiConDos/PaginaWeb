<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PaginaWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class ="nav-div">
                <h1 class="titulo">@ViewData["Title"]</h1>
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="nav-div nav-subdiv">
                        Home
                    </div>
                </a>
                <a asp-area="" asp-controller="Juegos" asp-action="Priconne">
                    <div class="nav-div nav-subdiv">
                        Pricone
                    </div>
                </a>
                <a asp-area="" asp-controller="Juegos" asp-action="HonkaiStarRail">
                    <div class="nav-div nav-subdiv">
                        Honkai Star Rail
                    </div>
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PaginaWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
